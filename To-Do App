<body>
    <div class="app-container" \>
        <h1 class="app-title">ToDo App</h1>

        <div class="input-container">
            <input type="text" id="todo-input" placeholder="Enter task"/>
            <button id="add-btn" onclick="addTask()">Add</button>
        </div>

        <div class="list-container" id="list-container"></div>
    </div>

    <script>
        const todoList = [];
    
        const listContainer = document.getElementById("list-container");

        function addTask() {
            const inputBox = document.getElementById("todo-input");
            const task = inputBox.value;
            if (task) 
            {
              todoList.push(task);
              inputBox.value = "";
              loadlist();
            } 
            else 
            {
                alert("Enter a task");
            }
        }

        function loadlist() {
            listContainer.innerHTM = "";

            for (let i=0; i< todoList.length; i++){
                const task = todoList[i];
            listContainer.innerHTML =
             listContainer.innerHTML + `<div class="list-item">${task} <span oncliclk ="removeTask(${i})">üóëÔ∏è</span> </div>`;
            }   
        }

       function removeTask(index) {
          todoList.splice(index, 1);
          todoList();
        }

    </script>
</body>

